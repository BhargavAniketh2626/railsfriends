

<% if user_signed_in? %>
<h1>Friends List</h1><br>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr class="table-dark text-center">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td> 
          <%= link_to friend.frist_name  + '  ' + friend.last_name, friend %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>

<h1>Hello Bhargav Aniketh !</h1>
Welcome to my first page of rails..!
<% end %>